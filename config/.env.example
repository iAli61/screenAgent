# ScreenAgent Environment Variables
# Copy this file to .env and fill in your API keys and configuration

# =============================================================================
# LLM Integration (Optional - for AI analysis features)
# =============================================================================
LLM_ENABLED=false
LLM_MODEL=gpt-4o
LLM_PROMPT=Describe what you see in this screenshot, focusing on the most important elements.

# =============================================================================
# OpenAI Configuration (if using OpenAI models)
# =============================================================================
# OPENAI_API_KEY=your-openai-api-key-here

# =============================================================================
# Azure OpenAI Configuration (if using Azure OpenAI)
# =============================================================================
# AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# OPENAI_API_VERSION=2023-07-01-preview

# Azure AI Models (comma-separated list)
# AZURE_AI_MODELS=gpt-4o,gpt-4o-mini

# Legacy Azure AI variables (for backward compatibility)
# AZURE_AI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_AI_KEY=your-azure-api-key-here

# =============================================================================
# GitHub Models Configuration (if using GitHub Models)
# =============================================================================
# GITHUB_MODEL_TOKEN=your-github-model-token-here
# GITHUB_MODELS=o3,o4-mini

# =============================================================================
# Flask Server Configuration
# =============================================================================
# FLASK_HOST=0.0.0.0
# FLASK_PORT=8000
# FLASK_DEBUG=True

# =============================================================================
# Screenshot Configuration
# =============================================================================
# SCREENSHOT_BASE_DIR=/path/to/screenshots
# MAX_SCREENSHOTS=100
# AUTO_CLEANUP=true

# =============================================================================
# Monitoring Configuration
# =============================================================================
# CHANGE_THRESHOLD=20
# CHECK_INTERVAL=0.5

# =============================================================================
# General Server Configuration
# =============================================================================
# PORT=8000
# MAX_PORT_ATTEMPTS=10

# =============================================================================
# Platform Detection (automatically detected, usually no need to set)
# =============================================================================
# WSL_DISTRO_NAME=Ubuntu
# DISPLAY=:0
# WAYLAND_DISPLAY=wayland-0
